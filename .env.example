# Traffic Signal Detection System - Environment Configuration
# Copy this file to .env.local and update with your actual values

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================

# Base URL for your backend API
# Development: http://localhost:8000/api
# Production: https://your-api.com/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# WebSocket URL for real-time updates
# Development: ws://localhost:8000/api/ws
# Production: wss://your-api.com/api/ws
NEXT_PUBLIC_WS_URL=ws://localhost:8000/api/ws

# ============================================================================
# CAMERA & VIDEO STREAMING (Optional)
# ============================================================================

# Camera feed URL for live video stream
# This can be an RTSP stream, HTTP stream, or WebRTC endpoint
NEXT_PUBLIC_CAMERA_FEED_URL=http://localhost:8080/stream

# RTSP URL for primary camera
# Format: rtsp://username:password@host:port/stream
NEXT_PUBLIC_RTSP_URL=rtsp://admin:password@camera-server:554/stream

# ============================================================================
# AUTHENTICATION (If required by your backend)
# ============================================================================

# API Key for backend authentication (if required)
# NEXT_PUBLIC_API_KEY=your_api_key_here

# Authentication token (if using token-based auth)
# NEXT_PUBLIC_AUTH_TOKEN=your_auth_token_here

# ============================================================================
# ANALYTICS & MONITORING (Optional)
# ============================================================================

# Analytics service configuration
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Error tracking service (e.g., Sentry)
# NEXT_PUBLIC_ERROR_TRACKING_DSN=https://your-sentry-dsn

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_LIVE_DETECTION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_INCIDENT_REPORTING=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode for development
# DEBUG=traffic-signal-*

# Enable verbose logging
# NEXT_PUBLIC_DEBUG=true

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================

# Node environment
# NODE_ENV=development

# Next.js app URL (used for development and serverless functions)
# NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# NOTES
# ============================================================================
# 
# 1. Never commit .env.local to version control
# 2. Use separate .env files for different environments (dev, staging, prod)
# 3. Always use environment variables for sensitive data
# 4. For production, set these variables in your hosting platform's settings
# 5. Restart your dev server after changing environment variables
#
# ============================================================================

